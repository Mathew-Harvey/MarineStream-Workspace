{
  "manifest_version": 3,
  "name": "MarineStream PAT Capture",
  "version": "1.0.0",
  "description": "Automatically captures your MarineStream PAT for the Fleet Command dashboard",
  "permissions": [
    "storage",
    "webRequest"
  ],
  "host_permissions": [
    "https://api.idiana.io/*",
    "https://app.marinestream.io/*",
    "https://app.rise-x.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "MarineStream PAT Capture"
  },
  "content_scripts": [
    {
      "matches": ["https://app.marinestream.io/*", "https://app.rise-x.io/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["http://localhost:3000/*", "https://*.onrender.com/*"],
      "js": ["dashboard-inject.js"],
      "run_at": "document_start"
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*", "https://*.onrender.com/*"]
  }
}
